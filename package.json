{
  "name": "lemonator",
  "version": "1.0.0",
  "description": "Lemonator â€” AI guesses your character while drawing them",
  "main": "dist-electron/main/index.js",
  "homepage": "https://github.com/Phqen1x/Lemonator",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Phqen1x/Lemonator/issues"
  },
  "author": {
    "name": "Drew VanDine",
    "email": "avandine23@gmail.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "test:integration": "tsx src/tests/integration-test.ts",
    "test:quick": "tsx src/tests/integration-test.ts --games=5",
    "test:medium": "tsx src/tests/integration-test.ts --games=10",
    "test:full": "tsx src/tests/integration-test.ts --games=50",
    "test:category": "tsx src/tests/integration-test.ts --games=20 --category",
    "test:visualist": "tsx src/tests/visualist-test.ts",
    "test:wikipedia": "tsx src/tests/wikipedia-test.ts",
    "test:wikipedia-loop": "tsx src/tests/auto-iterate-wikipedia.ts"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^40.4.1",
    "electron-builder": "^24.13.3",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.github.phqen1x.lemonator",
    "productName": "Lemonator",
    "npmRebuild": false,
    "asar": false,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "maintainer": "Drew VanDine <avandine23@gmail.com>",
      "desktop": {
        "entry": {
          "Name": "Lemonator",
          "GenericName": "AI Character Guessing Game",
          "Comment": "AI detective guesses your character while drawing them",
          "Keywords": "game;ai;guessing;character;akinator;",
          "Categories": "Game;LogicGame;",
          "StartupWMClass": "Lemonator"
        }
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.games"
    }
  }
}
